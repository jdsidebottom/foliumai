export default async function handler(req, res) {
  res.setHeader('Access-Control-Allow-Origin', '*');
  res.setHeader('Access-Control-Allow-Methods', 'POST, OPTIONS');
  res.setHeader('Access-Control-Allow-Headers', 'Content-Type');
  
  if (req.method === 'OPTIONS') {
    res.status(200).end();
    return;
  }

  if (req.method !== 'POST') {
    return res.status(405).json({ error: 'Method not allowed' });
  }

  const apiKey = process.env.PLANT_ID_API_KEY;
  if (!apiKey) {
    return res.status(500).json({ error: 'API key not configured' });
  }

  try {
    const { images } = req.body;
    
    if (!images || !Array.isArray(images) || images.length === 0) {
      return res.status(400).json({ error: 'No images provided' });
    }

    console.log('Submitting identification request to Plant.id...');
    
    // Step 1: Submit identification request
    const submitResponse = await fetch('https://api.plant.id/v3/identification', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Api-Key': apiKey,
      },
      body: JSON.stringify({
        images: images,
        classification_level: 'all',
        similar_images: true,
        health: 'all'
      }),
    });

    if (!submitResponse.ok) {
      const errorText = await submitResponse.text();
      return res.status(submitResponse.status).json({ 
        error: `Plant.id submission failed: ${submitResponse.status}`,
        details: errorText
      });
    }

    const submitData = await submitResponse.json();
    console.log('Received job ID:', submitData.id);

    // Step 2: Wait and poll for results
    const jobId = submitData.id;
    const accessToken = submitData.access_token;
    
    let attempts = 0;
    const maxAttempts = 30; // 30 seconds max
    
    while (attempts < maxAttempts) {
      console.log(`Polling attempt ${attempts + 1}...`);
      
      // Wait 1 second between polls
      await new Promise(resolve => setTimeout(resolve, 1000));
      
      const resultResponse = await fetch(`https://api.plant.id/v3/identification/${jobId}`, {
        method: 'GET',
        headers: {
          'Api-Key': apiKey,
          'Authorization': `Bearer ${accessToken}`
        }
      });

      if (resultResponse.ok) {
        const resultData = await resultResponse.json();
        
        // Check if processing is complete
        if (resultData.result && resultData.result.classification) {
          console.log('Plant identification completed!');
          return res.status(200).json(resultData);
        }
        
        // If still processing, continue polling
        console.log('Still processing, continuing to poll...');
      } else {
        console.log('Error polling results:', resultResponse.status);
      }
      
      attempts++;
    }

    // If we get here, polling timed out
    return res.status(408).json({ 
      error: 'Plant identification timed out',
      details: 'Processing took too long, please try again'
    });

  } catch (error) {
    console.error('Server error:', error);
    res.status(500).json({ 
      error: 'Internal server error',
      message: error.message
    });
  }
}
